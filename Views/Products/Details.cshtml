            <dd>
                <h4><b>$@Html.DisplayFor(model => model.ProductPrice)</b></h4>
            </dd>

            <dd>
                <h4><b>@Html.DisplayFor(model => model.ProductQuantity) g</b></h4>

            </dd>

            <dd>

