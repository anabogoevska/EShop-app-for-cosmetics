@model EShop.Domain.DTO.UserRegistrationDto

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #grad {
        background-image: linear-gradient(#8CD0E3, #F08DCE);
    }

    #grad3 {
        background-image: linear-gradient(to right, #22A0C0, #FF9AB0);
        border-image: linear-gradient(to right, #22A0C0, #FF9AB0);
        border-radius: 4px;
    }
</style>

<div class="row" id="grad" style=" height: 929px; margin-top: -62px; width: 1541px; margin-left: -210px; margin-right: -210px;">
    <div class="col-lg-8" style=" background-color: white; margin-top: 90px; margin-left: 215px; height:390px;">

        <h1 style="color: #378aa3; font-weight: bold; margin-left: 26px;" > Register</h1>
            @Html.ValidationSummary()
            <form asp-action="Register" asp-controller="Account" method="post">

                <div class="registerdiv">

                    <div class="form-group col-sm-12" style="color: #378aa3; font-weight: bold; ">
                        <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                        <br>
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>
                    </div>







                    <div class="form-group col-sm-12" style="color: #378aa3; font-weight: bold; ">
                        <label asp-for="@Model.Password" class="col-lg-3 control-label" ></label>
                        <br>
                        <div class="col-lg-9">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>

                    <div class="form-group col-sm-12" style="color: #378aa3; font-weight: bold; ">
                        <label asp-for="@Model.ConfirmPassword" class="col-lg-3 control-label"></label>
                        <br>
                        <div class="col-lg-9" style="color: #378aa3; font-weight: bold; ">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>

                    <div class="form-group" style="margin-left: 16px;">
                        <div class="col-sm-12 btn-submit">
                            <button id="grad3" type="submit" class="btn btn-success">Sign Up</button>

                        </div>
                    </div>



                </div>


            </form>

    </div>
</div>

