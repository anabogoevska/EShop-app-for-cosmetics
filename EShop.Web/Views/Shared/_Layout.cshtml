<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EShop.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background-color: #6ac1d9; ">
            <div class="container">
                <a class="navbar-brand" style="color: white; margin-top: -12px;" asp-area="" asp-controller="Home" asp-action="Index"><b>Cosmetics</b></a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" >
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1" style="margin-top: -10px; ">

                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-area="" asp-controller="Home" asp-action="Privacy"><b>Privacy</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " style="color:white;" asp-area="" asp-controller="Products" asp-action="Index"><b>All Products</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style="color:white;" asp-area="" asp-controller="Products" asp-action="IndexAdmin"><b>All ProductsAdmin</b></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" style="color:white;" asp-area="" asp-controller="ShoppingCarts" asp-action="Index"><b>Shopping Cart</b></a>
                        </li>

                        <img src="https://www.freeiconspng.com/uploads/cart-icon-16.png" style=" width: 50px; margin-bottom: -82px; margin-top: -5px;  height: 50px;">





                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
